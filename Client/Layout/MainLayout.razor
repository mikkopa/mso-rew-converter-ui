@using PeqConverter.Client.Components
@inherits LayoutComponentBase
<div class="page">
    <main>
        <div class="top-row px-4">
            <button class="about-link" @onclick="ShowInfoModal">About</button>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
    
    <VersionDisplay />
    <InfoModal IsVisible="showInfoModal" OnClose="HideInfoModal" />
</div>

@code {
    private bool showInfoModal = false;

    private void ShowInfoModal()
    {
        showInfoModal = true;
    }

    private void HideInfoModal()
    {
        showInfoModal = false;
    }
}

<style>
    .about-link {
        background: none;
        border: none;
        color: #0969da;
        text-decoration: none;
        cursor: pointer;
        font-size: inherit;
        padding: 0;
        font-family: inherit;
    }

    .about-link:hover {
        text-decoration: underline;
    }
</style>
